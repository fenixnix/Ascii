script/source = "extends Control

var data

func Set(dat):
	data = dat
	if len(data)>0:
		_on_ItemList_item_selected(0)
	refresh()

func refresh():
	$ItemList.clear()
	for o in data:
		$ItemList.add_item(o.name)

func _on_ItemList_item_selected(index):
	$OfcInfoRT.Set(data[index])

func _on_Close_pressed():
	GlbUi.Pop()

func _on_OfcInfoRT_value_change(ofc):
	refresh()
"

